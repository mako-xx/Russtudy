/* pages/home/home/home.wxss */
.back {
  background-image: linear-gradient(to top, #d3d3d3, #dedede, #e9e9e9, #f4f4f4, #ffffff);
}

.row{
  background-color: #d3d3d3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.slogen{
  position:relative;
  font-size: 60rpx;
  color: blue;
}
.header {
  position: relative;
  height:300rpx;
  background:transparent;
}

.bg_ware {
  position: absolute;
  left: 0;
  bottom: -2rpx;
  width: 100%;
  mix-blend-mode: screen;
  height: 120rpx;
}
.btext{

font-size: 35rpx;
font-weight: 550;
}
.bimage{
  z-index: 6;
  height: 100rpx;
  width: 100rpx;
  position: relative;
  top: 20rpx;

}
.button{
  position: relative;
  width: 300rpx;
  height: 250rpx;
  color: white;
  border-radius: 25px;
  display: flex;
flex-direction: column;
align-items: center;
justify-items: center;
}
.button.red{
  background-color: rgb(236, 100, 100);
}
.button.blue{
  background-color: rgb(115, 115, 255);
}
.button.yellow{
  background-color: rgb(205, 79, 255);
}
.button.green{
  background-color: rgb(0, 221, 0);
}
.rainbow{
  background-image: linear-gradient(to right top, #4fe9b5, #14e6cb, #00e1df, #00dcef, #00d5f9, #00d9f7, #00dcf4, #00e0f0, #3eecd6, #7ef4b4, #baf792, #f6f57c);
  background-size: 400%;
  background-position: 0%,50%;
  animation: rainbow_bg 5s infinite;
}
@keyframes rainbow_bg{
  0%{
    background-position: 0% 50%;
  }
  50%{
    background-position: 100% 0%;
  }
  100%{
    background-position: 0% 50%;
  }
}
.clouds{
  margin-top:320rpx; 
  background-color: transparent;
}
.yun1{
  width:340rpx;
  height: 200rpx;
  z-index: 10;
  animation: cloud1 5s infinite;
  background-color: transparent;
}
.yun2{
  width:170rpx;
  height: 100rpx;
  z-index: 10;
  animation: cloud2 10s infinite;
}
.yun3{
  width:238rpx;
  height: 140rpx;
  z-index: 10;
  animation: cloud3 7s infinite;
}
@keyframes cloud1{
  0%{
left: 352rpx;
  }
  50%{
left: 150rpx;
  }
  100%{
left: 352rpx;
  }
}
@keyframes cloud2{
  0%{
left: 60rpx;
  }
  50%{
left: 400rpx;
  }
  100%{
left: 60rpx;
  }
}
@keyframes cloud3{
  0%{
left: 100rpx;
  }
  50%{
left: 500rpx;
  }
  100%{
left: 100rpx;
  }
}
/* pages/surveys/survey2/survey2.wxss */
.section {
    display: flex;
    flex-direction: row;
    margin: 20rpx;
}

.numinput {
    width: 40%;
    display: flex;

    justify-content: center;
    padding: 8px;
}


.btn-area {
    margin: 20rpx;
}
.age {
  font-size: 40rpx;
}
button {
    margin: 10rpx 0;
    color: white;
    background-color: #3399FF;
}

.radio_view {
  position: relative;
  left: 0rpx;
  top: -30rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 40rpx;
  background-color: rgb(253, 253, 253);
  border-radius: 10px;
}
.radio{
  display: flex;
  flex-direction: column;

}
.checkbox{
  display: flex;
  flex-direction: column;
}
.birthday {
  color: black;
  line-height: normal;
  text-align: center;
}
.view_title {
    font-weight: bold;
    padding: 15rpx;
    border-bottom-width: 1px;
    border-bottom-style: groove;
    border-bottom-color: rgb(255, 255, 255);
}

radio-group {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

text {
    padding: 20rpx;
}

label {
    padding: 10rpx;
}




.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 40%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-title1 {
    padding-top: 50rpx;
    padding-bottom: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 50rpx 32rpx;
}

.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
}


.input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}

input-holder {
    color: #666;
    font-size: 28rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
}

.btn-confirm1 {
    width: 100%;
    color: #ec5300;
    text-align: center;
}
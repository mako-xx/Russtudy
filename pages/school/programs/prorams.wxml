<view class="VerticalBox">
    <scroll-view class="VerticalNav nav" scroll-y scroll-with-animation scroll-top="{{VerticalNavTop}}"
        style="height:{{ShowHeight-90}}rpx;margin-top:90rpx;width:100rpx">
        <view class="cu-form-group margin-top radius padding" bindtap="showModal" data-target="DrawerModalL">
            高级筛选
        </view>
    </scroll-view>
    <view class="" style="height: 0;">


        <scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}"
            style="height:auto">
            <view class="cu-item {{index==TabCur?'text-green cur':''}}" wx:for="{{10}}" wx:key bindtap="tabSelect"
                data-id="{{index}}">
                Tab{{index}}
            </view>
        </scroll-view>
        <scroll-view class="VerticalMain" scroll-y scroll-with-animation style="height:{{ShowHeight-90}}rpx"
            scroll-into-view="main-{{MainCur}}" bindscroll="VerticalMain" scroll-into-view="main-{{MainCur}}"
            bindscroll="VerticalMain">
            <view class="" id="main-0">
                <view class="">
                    <view class="cu-list menu-avatar">

                        <view class="cu-item solids-top" wx:for="{{10}}" wx:key wx:for-index="sub">
                            <!-- <view class="cu-avatar round lg">1</view> -->
                            <view class="cu-avatar round lg  shadow-blur"
                                style="background-image:url(https://pic4.zhimg.com/50/v2-98b210a15c5c0318589bce49804b1673_hd.jpg?source=1940ef5c);left:10rpx;">
                            </view>
                            <view class="content" style="">

                                <view class="text-grey" style="color:#996179">圣彼得堡大学
                                </view>
                                <view class="text-gray text-sm">
                                    QS世界排名：10
                                </view>
                                <view class="text-gray text-sm">
                                    QS国内排名：4
                                </view>
                            </view>
                            <view class="radius fr padding-sm shadow-blur myTxtCenter"
                                style=" height:4em;width:4em;font-size: 20rpx;background-color: #C8A695;">
                                了解更多</view>

                        </view>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>
</view>